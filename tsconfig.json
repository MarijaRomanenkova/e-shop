{
  /**
   * Root TypeScript Configuration
   * 
   * This configuration controls the TypeScript compiler settings for the entire application.
   * It's optimized for a Next.js project with modern TypeScript features.
   * 
   * See https://www.typescriptlang.org/tsconfig for all configuration options
   */
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",             // Target ECMAScript version supported by modern browsers
    "lib": [                        // Specify library files to be included in the compilation
      "dom",                        // DOM definitions (window, document, etc.)
      "dom.iterable",              // DOM iterables like NodeList
      "esnext"                     // Latest ECMAScript features
    ],
    "jsx": "preserve",              // Preserve JSX for Next.js to transform

    /* Modules */
    "module": "esnext",             // Use ECMAScript modules
    "moduleResolution": "bundler",  // Use bundler (Next.js) module resolution strategy
    "resolveJsonModule": true,      // Allow importing JSON files as modules
    "paths": {
      "@/*": ["./*"]               // Set up path aliases for imports (@/ points to root)
    },

    /* JavaScript Support */
    "allowJs": true,                // Allow JavaScript files to be compiled
    
    /* Emit */
    "noEmit": true,                 // Do not emit output (Next.js handles this)
    "incremental": true,            // Enable incremental compilation for faster builds
    
    /* Interop Constraints */
    "esModuleInterop": true,        // Enables cleaner imports from CommonJS modules
    "isolatedModules": true,        // Ensure each file can be safely transpiled without relying on other imports

    /* Type Checking */
    "strict": true,                 // Enable all strict type-checking options
    "skipLibCheck": true,           // Skip type checking of declaration files
    
    /* Next.js */
    "plugins": [
      {
        "name": "next"              // Enable Next.js compiler plugin for features like app directory support
      }
    ]
  },
  
  /* Files to Include/Exclude */
  "include": [
    "next-env.d.ts",               // Next.js types
    "**/*.ts",                     // All TypeScript files
    "**/*.tsx",                    // All TypeScript React files
    ".next/types/**/*.ts"          // Types generated by Next.js
  ],
  "exclude": [
    "node_modules"                 // Exclude node_modules from TypeScript compilation
  ]
}
